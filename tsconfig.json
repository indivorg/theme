{
  "compilerOptions": {
    "target": "ES2015",
    "module": "es2020",
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "isolatedModules": true,
    "outDir": "./dist/esm",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "preserve"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
